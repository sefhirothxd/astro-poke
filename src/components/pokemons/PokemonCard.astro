---
interface Props {
	name: string;
	url: string;
	isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
---

<a
	href={`/pokemons/${name}`}
	class:list={[
		`flex flex-col justify-center items-center p-2  rounded-md`,
		{
			'border-2 border-gray-100': !isBig,
		},
	]}
>
	<img
		transition:name={`${name}-image`}
		class:list={[
			{
				'w-26 h-26': isBig,
				'w-22 h-22': !isBig,
			},
		]}
		src={`https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`}
		alt={name}
	/>

	<!--  3xl-->

	<span class:list={['capitalize', { 'text-base': !isBig, 'text-4xl': isBig }]}>
		#{id}
		{name}
	</span>
</a>
